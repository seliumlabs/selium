namespace selium.logging;

enum LogLevel : byte {
  Trace,
  Debug,
  Info,
  Warn,
  Error,
}

table Field {
  key: string;
  value: string;
}

table Span {
  name: string;
  fields: [Field];
}

table LogRecord {
  level: LogLevel;
  target: string;
  message: string;
  fields: [Field];
  spans: [Span];
  timestamp_ms: ulong;
}

root_type LogRecord;
file_identifier "SLOG";
